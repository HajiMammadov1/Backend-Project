@model Setting
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto" style="margin-top: 100px;">
            <h1>Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Key">Key</label>
                    <input class="form-control" asp-for="Key" placeholder="Enter Key">
                    <span class="text-danger" asp-validation-for="Key"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Value">Value</label>
                    <input class="form-control" asp-for="Value" placeholder="Enter VAlue">
                    <span class="text-danger" asp-validation-for="Value"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ImageFile">Image File</label>
                    <input class="form-control" asp-for="ImageFile" placeholder="Enter Image File">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                    <img src="~/uploads/settings/@Model.Value" width="100" class="mt-3" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


