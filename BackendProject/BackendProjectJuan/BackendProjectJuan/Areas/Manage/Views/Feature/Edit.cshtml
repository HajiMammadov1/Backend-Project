@model Feature
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto" style="margin-top: 100px;">
            <h1>Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input class="form-control" asp-for="Title" placeholder="Enter Title1">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Desc">Button URL</label>
                    <input class="form-control" asp-for="Desc" placeholder="Enter Description">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">Image File</label>
                    <input class="form-control" asp-for="ImageFile" placeholder="Enter Image File">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                    <img src="~/uploads/features/@Model.Icon" width="100" class="mt-3" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


