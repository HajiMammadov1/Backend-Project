@model Product
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <!-- product details inner end -->
        <div class="product-details-inner">
            <div class="row">
                <div class="col-lg-5">
                    <div class="product-large-slider mb-20">

                       
                        
                            <div class="pro-large-img img-zoom">
                                <img src="~/uploads/products/@Model.ProductImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image" alt="product thumb" />
                            </div>
                     
                    </div>
                    @*<div class="pro-nav slick-row-5">
                        <div class="pro-nav-thumb"><img src="assets/img/product/@Model.ProductImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image" alt="" /></div>
                        
                    </div>*@
                </div>
                <div class="col-lg-7">
                    <div class="product-details-des">
                        <h3 class="pro-det-title">@Model.Name</h3>
                        <div class="pro-review">
                            <span><a href="#">1 Review(s)</a></span>
                        </div>
                        <div class="price-box">
                            @if (Model.DiscountPercent > 0)
                            {
                                <span class="price-regular">$@((Model.SalePrice * (1 - Model.DiscountPercent / 100)).ToString("0.00"))</span>
                                <span class="price-old"><del>$@Model.SalePrice</del></span>
                            }
                            else
                            {
                                <span class="price-regular">$@Model.SalePrice</span>
                            }
                        </div>
                        <p>@Model.Desc</p>
                        <div class="quantity-cart-box d-flex align-items-center mb-20">
                            <div class="quantity">
                                <div class="pro-qty"><input type="text" value="1"></div>
                            </div>
                            <a asp-controller="product" asp-action="addbasket" asp-route-id="@Model.Id" class="btn btn-default addToBasket">Add To Cart</a>
                        </div>
                        <div class="availability mb-20">
                            <h5 class="cat-title">Availability:</h5>
                            <span>@(Model.IsAvailable? "In Stock": "Not Available")</span>
                        </div>
                        <div class="mb-20">
                            Brand: @Model.Brand.Name <br />
                            Color: @foreach (var item in Model.ProductColors)
                            {
                                @item.Color.Name 
                            }
                        </div>
                        <div class="share-icon">
                            <h5 class="cat-title">Share:</h5>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                            <a href="#"><i class="fa fa-google-plus"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- product details inner end -->
    </div>
</div>