@model MemberRegisterViewModel
@{
    ViewData["Title"] = "Register";
}


<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Register</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-8 mb--30 mb-lg--0 mx-auto">
                <!-- Login Form s-->
                <form asp-action="register" method="post">
                    <div class="login-form">
                        <h4 class="login-title">New Customer</h4>
                        <p><span class="font-weight-bold">I am a new customer</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="FullName">Full Name</label>
                                <input class="mb-0 form-control" asp-for="FullName"
                                       placeholder="Enter your full name">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="UserName">UserName</label>
                                <input class="mb-0 form-control" asp-for="UserName"
                                       placeholder="Enter your username">
                                <span asp-validation-for="UserName" class="text-danger"></span>

                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Email">Email</label>
                                <input class="mb-0 form-control" type="email" asp-for="Email" placeholder="Enter Your Email Address Here..">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="Password">Password</label>
                                <input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="ConfirmPassword">Repeat Password</label>
                                <input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Repeat your password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</main>