@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Login";
}


<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Login</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-8 mb--30 mb-lg--0 mx-auto">
                <!-- Login Form s-->
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Reset Password</h4>
                        <div class="row">

                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="NewPassword">New Password</label>
                                <input class="mb-0 form-control" asp-for="NewPassword"
                                       placeholder="Enter your new password">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <input class="mb-0 form-control" asp-for="ConfirmPassword"
                                       placeholder="Confirm your new password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-outlined">Reset</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</main>

